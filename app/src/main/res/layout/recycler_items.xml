<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/item_difficulty"
            android:layout_toLeftOf="@+id/item_difficulty"
            android:text="Title"
            android:textColor="@color/cardview_dark_background"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/item_tag"
            android:layout_below="@id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topics : "
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/item_tagDetails"
            android:layout_below="@id/item_title"
            android:layout_toEndOf="@id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haaaaaaa"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/item_tag"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/item_difficulty"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EASY"
            android:padding="10dp"
            android:background="@drawable/difficulty_bg_easy"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentRight="true" />


        <TextView
            android:id="@+id/item_company"
            android:layout_below="@id/item_tagDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company : "
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/item_CompanyDetails"
            android:layout_below="@id/item_tagDetails"
            android:layout_toEndOf="@id/item_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haaaaaaa"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_toRightOf="@id/item_company"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/item_college"
            android:layout_below="@id/item_CompanyDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="College : "
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/item_CollegeDetails"
            android:layout_below="@id/item_CompanyDetails"
            android:layout_toEndOf="@id/item_college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haaaaaaaa"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@id/item_college"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/item_freq"
            android:layout_below="@id/item_CollegeDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency â†“ "
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>
        <ProgressBar
            android:id="@+id/item_frequency"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/item_freq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="10dp"
            android:progressBackgroundTint="@color/colorPrimary"
            android:progressTint="@color/colorPrimary"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>