<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="25dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp" />
        <TextView
            android:id="@+id/item_tag"
            android:layout_below="@id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags : "
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/item_tagDetails"
            android:layout_below="@id/item_title"
            android:layout_toEndOf="@id/item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="haaaaaaaaaaaaaaaappppppppppppppppppa"
            android:textSize="15dp"
            android:textColor="#808080"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/item_tag"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/item_difficulty"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EASY"
            android:padding="10dp"
            android:background="@drawable/difficulty_bg_easy"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>




</androidx.cardview.widget.CardView>